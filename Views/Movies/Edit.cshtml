@model MVCMovie.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Movie</h1>

<form asp-action="Edit" method="post" class="p-3 border rounded">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control p-2" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control p-2" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control p-2" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control p-2" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control p-2" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
